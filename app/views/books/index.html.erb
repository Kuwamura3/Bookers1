<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="alert">
    <h2 class="error_explanation">Following errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>

<div>
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div>
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit "Create Book" %>
</div>

<% end %>
